{
  "title": "Changes (or version) data format",
  "type": "object",
  "require": [ "changes" ],
  "properties": {
    "links": {
      "description": "Links that are shown as buttons on the changes page. Keys are the shown button text, values are the URLs.",
      "type": "object",
      "additionalProperties": {
        "title": "Key is title, value is object with url and optionally with icon",
        "type": "object",
        "required": [ "url" ],
        "properties": {
          "icon": {
            "type": "string"
          },
          "url": {
            "type": "string",
            "format": "uri",
            "pattern": "^https?://"
          }
        }
      }
    },
    "changes": {
      "description": "Character changes data",
      "type": "array",
      "items": {
        "type": "object",
        "required": [ "name", "moves" ],
        "properties": {
          "name": { "type": "string" },
          "moves": {
            "type": "array",
            "items": {
              "type": "object",
              "required": [ "title", "changes" ],
              "properties": {
                "title": { "type": "string" },
                "changes": {
                  "type": "array",
                  "items": {
                    "type": ["object", "string"],
                    "required": [ "title", "changes" ],
                    "properties": {
                      "title": { "type": "string" },
                      "changes": {
                        "type": "array",
                        "items": {
                          "type": "string"
                        }
                      }
                    }
                  }
                }
              }
            }
          }
        }
      }
    }
  }
}