{
	"compilerOptions": {
		"target": "ES2024",
		"lib": ["dom", "dom.iterable", "esnext"],
		"skipLibCheck": true,
		"strict": true,
		"noEmit": true,
		"esModuleInterop": true,
		"module": "esnext",
		"moduleResolution": "node",
		"resolveJsonModule": true,
		"isolatedModules": true,
		"jsx": "react-jsx",
		"baseUrl": "./",
		"paths": {
			"~image-indexes/*": ["image-generator/generated-image-indexes/*"],
			"~generated-images/*": ["public/images/generated/*"]
		},
		"plugins": [
			{
				"name": "next"
			}
		],
		"allowImportingTsExtensions": true,
		"allowJs": true,
		"incremental": true
	},
	"include": [
		"**/*.ts",
		"**/*.tsx",
		"next-env.d.ts",
		"next.config.ts",
		".next/types/**/*.ts",
		".next/dev/types/**/*.ts"
	],
	"exclude": ["node_modules"]
}
