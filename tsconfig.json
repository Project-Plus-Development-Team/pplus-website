{
	"compilerOptions": {
		"target": "ES2024",
		"lib": ["dom", "dom.iterable", "esnext", "ES2023.Array"],
		"skipLibCheck": true,
		"strict": true,
		"noEmit": true,
		"esModuleInterop": true,
		"module": "esnext",
		"moduleResolution": "node",
		"resolveJsonModule": true,
		"isolatedModules": true,
		"jsx": "preserve",
		"incremental": true,
		"baseUrl": "./",
		"paths": {
			"~image-indexes/*": ["image-generator/generated-image-indexes/*"],
			"~generated-images/*": ["public/images/generated/*"]
		},
		"plugins": [
			{
				"name": "next"
			}
		],
		"allowImportingTsExtensions": true,
		"allowJs": false
	},
	"include": [
		"**/*.ts",
		"**/*.tsx",
		"next-env.d.ts",
		"next.config.ts",
		".next/types/**/*.ts"
	],
	"exclude": ["node_modules"]
}
